<html>
<head>
</head>

<body>

<h1 class="header">Week 5 Product app</h1>

<div class="cart-droppable-area">
	<i class="cart-icon fa fa-shopping-cart fa-5x">Shopping Cart</i>
	drag items here to add to cart
	<div class="cart-table">
	  <table>
			<th>Product Name</th><th>Product Name</th>
			<tr><td></td></tr>
			<tr><td>Product Image Small</td></tr>
			<tr><td>Cccccc</td></tr>
	  </table>
	</div>
</div>

<div class="grid-container">
	
	<% @products.each do |product| %>

	  <div class="product-container" draggable="true" >
	  
	  	<div class="product-title">
	  		<i class="fa fa-scissors"></i>
	  		<%= product.name %>
	  	</div>
	  	
	  	<div class="image-container">
	  		 <%= image_tag( product.picture ,  size: "100x100" , alt: product.name, :class => 'product-image') %>
	 	</div>	
	 	
	    <div class="product-price">
	 		<%= "$ " + product.cost.to_s %>
	  	</div>

	  	<div class="product-buttons">
		  	<!-- Add to Cart Button -->
			<ul>
				<li class="add-to-cart">
					<i class="fa fa-plus"></i>
					<a href=""> Add to Cart </a>
				</li>	

			  	<!-- Product Details -->
				<li class="product-details">
					<i class="fa fa-info-circle"></i>
					<a href="#"> Product Details </a>
				</li>
			</ul>
	  	</div>
	  
	  </div>
	<% end %>
	

</div>

</body>
</html>